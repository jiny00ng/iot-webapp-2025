@model MyPortfolioWebApp.Models.Board
@inject SignInManager<CustomUser> SignInManager

@{
    ViewData["Title"] = "상세 보기";
}

<section id="board" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>자유게시판</h2>
        <p>자유롭게 의견을 나눌 수 있는 공간입니다</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <h4>상세 내용</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">작성자</dt>
            <dd class="col-sm-10">@Model.Writer (@Model.Email)</dd>

            <dt class="col-sm-2">제목</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">내용</dt>
            <dd class="col-sm-10">@Model.Contents</dd>

            <dt class="col-sm-2">작성일</dt>
            <dd class="col-sm-10">@Model.PostDate?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">조회수</dt>
            <dd class="col-sm-10">@Model.ReadCount</dd>
        </dl>

        <div>
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">수정</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">삭제</a>
            }
            <a asp-action="Index" class="btn btn-sm btn-secondary">목록</a>
        </div>
    </div>
</section>
